- if @posts.count > 0
  - @posts.each do |post|
    %h1= post[:title]
    - post[:body] = $markdown.render(post[:body])
    = post[:body]
    - @url_to_tweet=request.scheme + "://" + request.host + "/post/#{post[:id]}"
    - @text_to_tweet=post[:title]
    = haml :tweet
    %hr

  = haml :pagination
- else
  No content
