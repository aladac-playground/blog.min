.pagination
  %ul
    - page_number = 1
    - if @pages.first_page?
      %li.disabled 
        %a Prev
    - else
      %li
        %a{:href => "?page=#{@pages.prev_page}"} Prev
    - @pages.page_count.times do 
      - if page_number == @pages.current_page
        %li.active
          %a= page_number
      - else
        %li
          %a{:href => "?page=#{page_number}"}= page_number
      - page_number += 1
    - if @pages.last_page? 
      %li.disabled
        %a Next
    - else
      %li
        %a{:href => "?page=#{@pages.next_page}"} Next
