- if @posts.count > 0
  - @posts.each do |post|
    %h1= post[:title]
    = Blog::Text.render(post[:body])
    - if $config.twitter
      - @url_to_tweet=request.scheme + "://" + request.host + "/post/#{post[:id]}"
      - @text_to_tweet=post[:title]
      = haml :tweet
    %hr

  = haml :pagination
- else
  No content
