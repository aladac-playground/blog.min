!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %title= $config.title
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %link{:href => "../bootstrap/css/bootstrap.css", :rel => "stylesheet"}
      :css
        body {
          padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
          %link{:href => "../bootstrap/css/bootstrap-responsive.css", :rel => "stylesheet"}
        / HTML5 shim, for IE6-8 support of HTML5 elements
        /[if lt IE 9]
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        / Fav and touch icons
    %link{:href => "../bootstrap/ico/apple-touch-icon-144-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "144x144"}
    %link{:href => "../bootstrap/ico/apple-touch-icon-114-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "114x114"}
    %link{:href => "../bootstrap/ico/apple-touch-icon-72-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "72x72"}
    %link{:href => "../bootstrap/ico/apple-touch-icon-57-precomposed.png", :rel => "apple-touch-icon-precomposed"}
    %link{:href => "../bootstrap/ico/favicon.png", :rel => "shortcut icon"}
    %script{ :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js" }
    %script{ :src => "http://jzaefferer.github.com/jquery-validation/jquery.validate.js" }
    %script{ :src => "../js/validate.js" }
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => request.scheme + "://" + request.host + ":" + request.port.to_s }= $config.title
          .nav-collapse.collapse
            %ul.nav
              %li.active
                %a{:href => "/"} Home
              - Blog::Page.all.each do |page|
                %li
                  %a{:href => "/page/#{page[:id]}"}= page[:title]
    .container
      = yield
    / /container
    /
      Le javascript
      \==================================================
    / Placed at the end of the document so the pages load faster
    %script{:src => "../bootstrap/js/jquery.js"}
    %script{:src => "../bootstrap/js/bootstrap-transition.js"}
    %script{:src => "../bootstrap/js/bootstrap-alert.js"}
    %script{:src => "../bootstrap/js/bootstrap-modal.js"}
    %script{:src => "../bootstrap/js/bootstrap-dropdown.js"}
    %script{:src => "../bootstrap/js/bootstrap-scrollspy.js"}
    %script{:src => "../bootstrap/js/bootstrap-tab.js"}
    %script{:src => "../bootstrap/js/bootstrap-tooltip.js"}
    %script{:src => "../bootstrap/js/bootstrap-popover.js"}
    %script{:src => "../bootstrap/js/bootstrap-button.js"}
    %script{:src => "../bootstrap/js/bootstrap-collapse.js"}
    %script{:src => "../bootstrap/js/bootstrap-carousel.js"}
    %script{:src => "../bootstrap/js/bootstrap-typeahead.js"}
